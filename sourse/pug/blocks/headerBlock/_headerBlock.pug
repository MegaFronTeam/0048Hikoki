mixin headerBlock()
	// start headerBlock
	+b.headerBlock.section#headerBlock&attributes(attributes)
		.container
			+e.slider-wrap
				.swiper-container.gallery-top
					.swiper-wrapper
						+headerBlockSlide()
						+headerBlockSlide()
						+headerBlockSlide()
						+headerBlockSlide()
						+headerBlockSlide()
					.swiper-pagination
				+arrow('d-none d-xl-flex')

	// end headerBlock

mixin headerBlockSlide()
	+e.slide.swiper-slide.bg-wrap
		+e.slide-link(href='#')
			img.swiper-lazy(src="#" data-src="img/@2x/header-slide-1.png", alt="")