mixin sProdCard(data)
	// start sProdCard
	+b.SECTION.sProdCard.section#sProdCard&attributes(attributes)
		.container
			block
			+b.section-title.light.long
				+e.row.row
					.col
						h2.p-0.m-0 Ударная дрель-шуруповерт DS12DA
					.col-auto.d-none.d-sm-block
						+e.icons-row.row
							.col-auto
								+e.icon(href='#')
									+icon('bars')
							.col-auto
								+e.icon(href='#')
									+icon('heart')
			+e.main-row.row
				.col-lg-8
					+prodCardSliders('d-none d-lg-block')
					+productTabs()
					+sCatalogAlso()
					+sCatalogSimilar()(class="pb-0")
				+e.side-col.col-lg-4
					+prodCardSliders('d-lg-none')
					+buyBlock()
					//-
					+tableDescr('Краткое описание')
						+tableDescrItem('Производитель')
							+e.t-logo
								img(loading="lazy" src="img/svg/sm-pr-logo.svg" alt="")
						+tableDescrItem('Страна производства')
							+e.t-country
								+e.t-country-img
									img(loading="lazy" src="img/@2x/flag.png" alt="")
								+e.t-country-txt Швеция
						+tableDescrItem('Артикул', 'VB3616DA')
					+e.det-link(href="#") Подробное описание
					+miniSlider()
					+tableDescr('Наличие в магазинах')
						+tableDescrItem('Магазин Дмитровка', 'В наличии')
						+tableDescrItem('Магазин Дмитровка', 'Под заказ')
					+tableDescr('Варинаты доставки')(class="mb-12")
						+tableDescrItem('Курьерская доставка по Москве')
							| 1-2 дня
							br
							| от 200 до 500 руб.
						+tableDescrItem('Доставка по России')
							| от 1-2 дня
							br
							| от 500 руб.
						+tableDescrItem('Самовывоз')
							| от 250 руб.
					+e.free.text-center
						| При заказе от 5 000 руб. доставка
						|
						span.text-primary бесплатная
						|. Точную стоимость доставки уточняйте у менеджера.
				//-
	// end sProdCard

mixin productTabs()
	+b.prodTabs.tabs
		+e.caption.tabs__caption
			.swiper-container.prodTabs-caption-slider-js
				.swiper-wrapper
					+productTabsSlide('Характеристики', 'active')
					+productTabsSlide('Комплектация')
					+productTabsSlide('Принадлежности и запасные части')
					+productTabsSlide('Отзывы')
		+e.wrap.tabs__wrap
			.tabs__content.active
				+e.table
					+prodTabsTableRow('Номинальная потребляемая мощность','1100 Вт')
					+prodTabsTableRow('Напряжение сети','220 - 240 В')
					+prodTabsTableRow('Макс. производительность','4000 л/ч')
					+prodTabsTableRow('Максимальная высота всасывания','Максимальная высота всасывания 8 м')
					+prodTabsTableRow('Макс. высота подачи','Макс. высота подачи 46 м')
					+prodTabsTableRow('Макс. давление','Макс. давление 4,6 бар')
			.tabs__content 2
			.tabs__content 3
			.tabs__content 4

mixin prodTabsTableRow(name, val)
	+e.t-row.row
		+e.t-name-col.col-6=name
		+e.t-val-col.col-6=val

mixin productTabsSlide(title, addClass="")
	.swiper-slide
		+e.btn.tabs__btn(class=addClass)=title

mixin miniSlider()
	+b.mini-slider
		.swiper-container.mini-slider-js
			.swiper-wrapper
				+miniSlide()
				+miniSlide()
				+miniSlide()
				+miniSlide()
				+miniSlide()
		.swiper-pagination

mixin miniSlide()
	.swiper-slide
		+e.img(href='#')
			img.swiper-lazy(src="#" data-src="img/@2x/header-slide-1.png" alt="")

mixin tableDescr(title)
	+e.table-descr&attributes(attributes)
		+e.t-head=title
		+e.t-items
			block

mixin tableDescrItem(name, val)
	+e.t-item.row
		+e.t-name-col.col-6=name
		if block
			+e.t-val-col.col-6
				block
		else
			+e.t-val-col.col-6=val

mixin buyBlock()
	+b.buy-bl--js
		+e.close-bar.d-md-none.buy-bl-toggle-js
			+icon('chevron-down')
		+e.main-row.row
			+e.price-col.col.col-md-5.col-lg-12
				+e.price-row.row
					.col-auto
						+e.price--old 18 500 ₽
						+e.price--new 16 500 ₽
					+e.inputs-col.col
						+e.price
							+e.p-btn--min -
							+e.INPUT.p-input.form-control(type='number' value="1")
							+e.p-btn--plus +
			+e.btns-col.col-auto.col-md-7.col-lg-12
				+e.btn-row.row
					.col-md-6.col-lg-12
						+e.buy-btn(href="#") Купить
					+e.bill-col.col-md-6.col-lg-12
						+e.bill-btn(href="#") Запросить счёт
			+e.open-col.col-auto.d-md-none.buy-bl-toggle-js
				+e.open
					span


mixin prodCardSliders(addClasses='')
	+b.pc-sliders--js(class=addClasses)
		+e.row.row
			.col-md-auto
				+e.thumb-slider
					.swiper-container.sProdCard-thumb-js
						.swiper-wrapper
							+prodCardThumb(1)
							+prodCardThumb(1)
							+prodCardThumb(1)
							+prodCardThumb(1)
			+e.slider-col.col-md
				+e.slider
					.swiper-container.sProdCard-slider-js
						.swiper-wrapper
							+prodCardSlide(1)
							+prodCardSlide(1)
							+prodCardSlide(1)
							+prodCardSlide(1)

mixin prodCardThumb(imgNum)
	.swiper-slide
		+e.th-item
			img.swiper-lazy(src="#" data-src=`img/@2x/thumb.jpg` alt="")

mixin prodCardSlide(imgNum)
	.swiper-slide
		+e.slide-img
			img.swiper-lazy(src="#" data-src=`img/@2x/prod-card-img.jpg` alt="")

