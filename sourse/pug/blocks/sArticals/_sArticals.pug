mixin sArticals()
	// start sArticals
	+b.SECTION.sArticals.section#sArticals&attributes(attributes)
		.container
			+b.section-title
				.row.align-items-center
					.col
						h2.mb-0 Это интересно
					.col-auto
						+e.all-links(href='#')
							span Все статьи
							+icon('chevron-right')
			+e.row.row
				+itemNews("1", undefined, 'col-md-4')
				+itemNews("2", undefined, 'col-md-4')
				+itemNews("3", undefined, 'col-md-4')
	// end sArticals

mixin itemNews(i ,t="Позаботьтесь о тепле и безопасности с принадлежностями для работы  с цепной пилой", bootClasses='col-sm-6 col-lg-4')
	+e.col(class=bootClasses)&attributes(attributes)
		+e.img-wrap(href="#")
			img(loading="lazy" src=`img/@2x/artical-${i}.jpg` alt="")
		+e.title(href="#")=t

mixin sArticalsPage()
	// start sArticals
	+b.SECTION.sArticals--page.section#sArticals&attributes(attributes)
		.container
			block
			+b.section-title.light
				h1 Новости
			+e.row.row
				+itemNews("1")
				+itemNews("2")
				+itemNews("3")
				+itemNews("1")
				+itemNews("2")
				+itemNews("3")
				+itemNews("1")
				+itemNews("2")
				+itemNews("3")(class="d-none d-lg-block")
			.text-center
				+e.BUTTON.plus-btn(type='button')
					+icon('plus')