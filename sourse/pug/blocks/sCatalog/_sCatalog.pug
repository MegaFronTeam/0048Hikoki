mixin sCatalog(data)
	// start sCatalog
	+b.SECTION.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+b.section-title
				h2 Хиты продаж
	// end sCatalog

mixin sCatalogHit()
	// start sCatalog
	+b.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+b.section-title
				h2 Хиты продаж
			+e.slider-wrappper
				+e.slider--js.swiper-container
					.swiper-wrapper
						+e.slide.swiper-slide
							+item-prod('1', 'slider', 'VB3616DA')
								+e.badge.bg-red Новинка
						+e.slide.swiper-slide
							+item-prod('2', 'slider', 'CB18DBL', 'Cordless Band Saw')
						+e.slide.swiper-slide
							+item-prod('2', 'slider', 'CD3605DA')
						+e.slide.swiper-slide
							+item-prod('2', 'slider', 'CD3605DA')
						+e.slide.swiper-slide
							+item-prod('2', 'slider')
				+arrow('d-none d-sm-flex')

