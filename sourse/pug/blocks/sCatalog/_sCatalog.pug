mixin item-prod(i, slider, code='VB3616DA', t="MULTI VOLT (36V) Cordless Portable Rebar Cutter/Bender", hasOldPrice=true)
	+b.prod-item&attributes(attributes)
		+e.DIV.img-wrap
			block
			+e.A.img-link(href="#")
				if !slider
					img(loading="lazy" src=`img/@2x/hit-${i}.jpg`, alt="")
				else
					img.swiper-lazy(src="#" data-src=`img/@2x/hit-${i}.jpg`, alt="")
		+e.box
			+e.code=code
			+e.title(href="#")= t
			if hasOldPrice
				+e.price--old 18 500 ₽
				+e.price--new 16 500 ₽
			else
				+e.price--new 22 600 ₽
		+e.btn(href="#") Купить

